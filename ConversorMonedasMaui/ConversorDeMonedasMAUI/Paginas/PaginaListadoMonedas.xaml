<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConversorDeMonedasMAUI.Paginas.PaginaListadoMonedas"
             Title="PaginaListadoMonedas">
    <VerticalStackLayout>
        <ListView x:Name="lvwListadoMonedas" VerticalOptions="FillAndExpand">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout 
                            Orientation="Horizontal"
                            Margin="10">
                            <Image Source="{Binding UrlImagen}" Margin="10"/>
                            <Label Text="{Binding NombreMoneda}" Margin="10"/>
                            <Label Text="{Binding SiglasMoneda}" Margin="10"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>